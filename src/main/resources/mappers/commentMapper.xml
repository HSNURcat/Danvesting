<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dandan.danvesting.post.comment.dao.CommentDAO">
	<insert id="insertComment" parameterType="map">
		INSERT INTO	`comment`
		(
			`userId`
			, `nickName`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		) VALUES(
			#{userId}
			, #{nickName}
			, #{postId}
			, #{content}
			, now()
			, now()
		);
		
	</insert>
	
	<select id="selectComments" parameterType="int" resultType="com.dandan.danvesting.post.comment.model.Comment">
		SELECT
			`id`
			, `userId`
			, `nickName`
			, `postId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId};
	</select>
</mapper>







