<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dandan.danvesting.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
 		(
 			`writerId`
 			, `nickName`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES (
			#{userId}
			, #{nickName}	
			, #{postTitle}	
			, #{postText}	
			, #{filePath}
			, now()
			, now()
 		);
	</insert>
	
	<select id="getPost" resultType="com.dandan.danvesting.post.model.Post">
		SELECT
			`id`
			, `writerId`
 			, `nickName`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`;
	</select>
	
	<select id="getPostDetail" resultType="com.dandan.danvesting.post.model.Post">
		SELECT
			`id`
			, `writerId`
 			, `nickName`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId};
	</select>
	
	<delete id="deletePost" parameterType="map">
		DELETE FROM
			`post`
		WHERE
			`writerId` = #{userId}
		AND
			`id` = #{postId};
	
	</delete>
</mapper>